<%= form_for @user,:html => {:multipart => true} do |f| %>

<p>
  <%= f.label :fname, "First Name" %><br>
  <%= f.text_field :fname %>
</p>

<p>
  <%= f.label :lname, "Last Name" %><br>
  <%= f.text_field :lname %>
</p>

<p>
  <%= f.label :email, "Email"%><br>
  <%= f.text_field :email%>
</p>

<p>
  <%= f.label :phone %><br>
  <%= f.telephone_field :phone %>
</p>

<p>
  <%= f.label :addr %>
  <br>
  <%= f.text_area :addr %>
</p>

<p>
  <%= f.label :bio %>
  <br />
  <%= f.text_area :bio %>
</p>

 <p>
    <label>Upload Profile Picture </label>
    <%= f.file_field :user_image %>
  </p>

<p>
  <%= f.submit %>
</p>

<% end %>
