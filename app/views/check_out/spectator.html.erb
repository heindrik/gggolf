<%= form_tag(spectator_tournament_tournament_registrations_path, method: 'POST') do %>
  <%= hidden_field_tag :email, params[:email] %>
  <%= hidden_field_tag :ticket_option_id, params[:ticket_option_id] %>
  
  <h4>Please pay the following fee to complete your registration:</h4>
  <p>$<%= @payment_amount %></p>
  <p>Your ticket will be sent to <%= params[:email] %></p>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Ticket Fee"
          data-amount="<%= @payment_cents %>"
          data-locale="auto"></script>
<% end %>
