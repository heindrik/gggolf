<div class="container">
  <h1>Contact us</h1>
  <h2>Ask us anything!</h2>
  <ul>
  <% @contactform.errors.each_with_index do |msg, i| %>
  <li><%= msg[1] %></li>
  <% end %>
</ul>
  <%= form_for @contactform, url: contact_path do |f| %>
    <fieldset>
      <div class="field">
        <%= f.text_field :name, placeholder: "Name" %>
      </div>
     
      <br>

      <div class="field">
        <%= f.email_field :email, placeholder: "Email"%>
      </div>
      <br>
      
      <div class="field">
        <%= f.text_area :content, placeholder: "Message"%>
      </div>
    </fieldset>

    
    <fieldset>
      <div class="field">
        <%= f.submit "Send" %>
      </div>
    </fieldset>
  <% end %>

</div>