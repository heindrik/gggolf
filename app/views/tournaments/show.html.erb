<div class = "container">
    <div class="jumbotron">
      <div class="row">
        <div class = "col-md-4">
          <div class="center-block" align="center">
            <%= image_tag("golf1.png", class: "img-responsive", width: "250")%>
          </div>
        </div>
        <div class = "col-md-8">
          <div class="row">
            <div class = "col-md-8">
              <h1><%= @tournament.title%></h1>
              <p><%= @tournament.description%></p>
            </div>
          </div>
          <div class="row">
            <div class = "col-md-4">
              <p><strong>Place:</strong> <%= @tournament.location%></p>
            </div>
            <div class = "col-md-4">
              <p><strong>Time:</strong> <%= @tournament.start_datetime %></p>
            </div>
          </div>
          <div class="row">
            <div class = "col-md-4">
              <p><strong>Price:</strong> $xx.xx</p>
            </div>
            <div class = "col-md-4">
              <p><strong>Phone:</strong> <%= @tournament.phone %></p>
            </div>
          </div>
          <div class="row">
            <div class = "col-md-4">
              <p><strong>Email:</strong> <%= @tournament.email %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <% if signed_in? && @tournament.has_player?(current_user.id) %>
            <%= link_to 'Quit', quit_tournament_path(@tournament), method: :delete, class: 'btn btn-default btn-lg btn-block' %>
          <% else %>
            <%= link_to 'Join', new_tournament_tournament_registration_path(@tournament), class: 'btn btn-primary btn-lg btn-block' %>
          <% end %>

          <% if @enable_sponsor %>
            <%= link_to 'Sponsor', sponsor_tournament_path, {
              :method=>"POST",
              :class=>"btn btn-primary btn-lg btn-block"} %>
          <% else %>
            <%= link_to 'Sponsor', "#", {:class=>"btn btn-primary btn-lg btn-block disabled"} %>
          <% end %>
        </div>
      </div>
    </div>
</div>

<div class ="container">
  <h1>Available Spots:</h1>
  <div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="<%= @available_spot %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @available_spot %>%;">
    <!-- <div class="progress-bar" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: 60%;"> -->
      <%= @available_spot %>% remaining
    </div>
  </div>

  <!-- display all participants in a table -->
  <div class="row">
    <hr>
    <h2>Participant List</h2>
    <table class="table table-striped">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Joined</th>
        <th>Team</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.fname %></td>
          <td><%= user.lname %></td>
          <td> no data yet</td>
          <td> no data yet</td>
        </tr>
      <% end %>
    </table>
  </div>

  <!-- display all sponsors in a table -->
  <div class="row">
    <hr>
    <h2>Our Proud Sponsors</h2>
    <table class="table table-striped">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Joined</th>
      </tr>
      <% @sponsors.each do |s| %>
        <tr>
          <td><%= s.user.fname %></td>
          <td><%= s.user.lname %></td>
          <td> no data yet</td>
        </tr>
      <% end %>
    </table>
  </div>
</div>


