<%= form_for @tournament do |f| %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.label "Start Date and Time" %><br>
    <%= f.date_field :start_datetime, placeholder: "YYYY-MM-DD HH:MM" %>
  </p>

  <p>
    <%= f.label "End Time" %><br>
    <%= f.date_field :end_datetime, placeholder: "YYYY-MM-DD HH:MM" %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :player_limit %><br>
    <%= f.number_field :player_limit %>
  </p> 

  <p>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </p>

  <p>
    <%= f.submit %>
  </p>
 
<% end %>