<div id="portfoliowrap">
    <div class="container">
      <div class="row">
        <h1>Tournaments</h1>
        <h3>Find the perfect tournament with our immense list!</h3>
      </div>
      <div class="row">
        <%= link_to 'Create Tournament', new_tournament_path, {:class=>"btn btn-theme"} %>
      </div> 
    </div>
</div><!-- /headerwrap -->

<div class="container">
  <div class="row">
    <table id="tournamentsall" class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Location</th>
          <th>Start Date</th>
          <th>Until</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @tournaments.each do |tournament| %>
          <tr>
            <td><%= link_to tournament.title, tournament_path(tournament) %></td>
            <td><%= tournament.location %></td>
            <td><%= tournament.start_datetime.strftime('%v') %></td>
            <td><%= tournament.end_datetime.strftime('%v') %></td>
            <td><%= tournament.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
