.nested-fields.form-inline.form-group
  = f.label :ttype, t('tournaments.form.sponsor_type')
  = f.text_field :ttype, class: 'form-control'
  = f.label :price, t('tournaments.form.price')
  = f.number_field :price, min: 0, class: 'form-control'

  = link_to_remove_association t('tournaments.form.remove'), f